<h1>New Song Form</h1>
<% if @song.errors.any? %>
    <div class = "error_explanation">
    <h2>
    <%= pluralize(@song.errors.count, "error") %> 
    found and must be corrected!
    </h2>
        <ul>
            <% @song.errors.full_messages.each do |m| %>
            <li><%= m %></li>
            <% end %>
        </ul>
    </div> 
<% end %>

<%= form_for @song do |f| %>
<div class='field'>
    <%= f.label :title, 'Title' %>
    <%= f.text_field :title %>
</div>

<div class = 'field'>
    <%=f.label :released %>
    <%= f.check_box :released %>
</div>

<div class = "field">
    <%= f.label :release_year %>
    <%= f.text_field :release_year %>
</div>

<div class = "field">
    <%= f.label :artist_name %>
    <%= f.text_field :artist_name %>
</div>

<div class = "field">
    <%=f.label :genre %>
    <%= f.text_field :genre %>
</div>

<% end %>


